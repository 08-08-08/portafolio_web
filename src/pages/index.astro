    display: flex;
    flex-shrink: 0;
    min-width: 100%;
    justify-content: space-around;
    padding-left: 5rem; 
    animation: scroll 40s linear infinite;
  }

  @keyframes scroll {
    from { transform: translateX(0); }
    to { transform: translateX(-100%); }
  }

  .marquee-container:hover .marquee-content {
    animation-play-state: paused;
  }
</style>

<script>
  import { ui, type Language } from "../i18n";

  // --- 1. LÓGICA DE TRADUCCIÓN (i18n) ---
  let currentLang: Language = "es";
  
  const langBtn = document.getElementById("language-toggle");
  const langIndicator = document.getElementById("lang-indicator");
  const langTexts = langBtn?.querySelectorAll('span');

  function updateContent(lang: Language) {
    const elements = document.querySelectorAll("[data-key]");
    
    elements.forEach((el) => {
      const key = el.getAttribute("data-key") as keyof (typeof ui)["es"];
      // @ts-ignore
      const translation = ui[lang][key];

      if (translation) {
        if (translation.includes("<span") || translation.includes("<br")) {
          el.innerHTML = translation;
        } else {
          el.textContent = translation;
        }
      }
    });

    document.documentElement.lang = lang;

    if (langIndicator && langTexts) {
      if (lang === "en") {
        langIndicator.style.transform = "translateX(36px)";
        langTexts[0].classList.replace('text-white', 'text-slate-400');
        langTexts[1].classList.replace('text-slate-400', 'text-white');
      } else {
        langIndicator.style.transform = "translateX(0px)";
        langTexts[1].classList.replace('text-white', 'text-slate-400');
        langTexts[0].classList.replace('text-slate-400', 'text-white');
      }
    }
  }

  langBtn?.addEventListener("click", () => {
    currentLang = currentLang === "es" ? "en" : "es";
    updateContent(currentLang);
  });


  // --- 3. LÓGICA DEL DROPDOWN DE CONTACTO ---
  const btnDropdown = document.getElementById('btn-dropdown');
  const menuDropdown = document.getElementById('menu-dropdown');
  const iconArrow = document.getElementById('icon-arrow');

  btnDropdown?.addEventListener('click', (e) => {
    e.stopPropagation();
    menuDropdown?.classList.toggle('opacity-0');
    menuDropdown?.classList.toggle('scale-95');
    menuDropdown?.classList.toggle('pointer-events-none');
    iconArrow?.classList.toggle('rotate-180');
  });

  document.addEventListener('click', () => {
    menuDropdown?.classList.add('opacity-0', 'scale-95', 'pointer-events-none');
    iconArrow?.classList.remove('rotate-180');
  });


  // --- 4. LÓGICA DEL BOTÓN VOLVER ARRIBA ---
  const backToTop = document.getElementById('back-to-top');

  window.addEventListener('scroll', () => {
    if (window.scrollY > 500) {
      backToTop?.classList.remove('opacity-0', 'translate-y-10', 'pointer-events-none');
    } else {
      backToTop?.classList.add('opacity-0', 'translate-y-10', 'pointer-events-none');
    }
  });

  backToTop?.addEventListener('click', () => {
    window.scrollTo({ top: 0, behavior: 'smooth' });
  });
</script>

